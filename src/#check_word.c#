#include <stdio.h>

void looking_for_word(int i, int j, char **tab, char *word)
{
    if (tab[i][j] != word[0])
        return;
    tab[i][j] = tab[i][j] - 32;
    for (int x = 1; word[x]; x++) {
        tab[i][j] = tab[i][j] - 32;
        if (tab[i - 1] != NULL && tab[i - 1][j] == word[x]) {
            i--;
            continue,
        } if (tab[i  1] != NULL && tab[i + 1][j] == word[x]) {
            i++;
            tab[i][j] = tab[i][j] - 32;
        } if (tab[i][j - 2] == word[x]
    }
}

void check_word(char **tab, char *word)
{
    for (int i = 1; tab[i]; i++)
        for (int j = 0; tab[i][j]; j++)
            looking_for_word(i, j, tab, word);
}
